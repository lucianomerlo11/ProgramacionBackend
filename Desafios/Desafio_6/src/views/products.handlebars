
{{>navbar}}
<div class="container mt-5">
    <h1>Product List</h1>
    <div class="row">
        {{#each prods}}
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title text-center">{{this.title}}</h5>
                </div>
                <div class="card-body">
                    <p class="card-text"><b>Description:</b> {{this.description}}</p>
                    <p class="card-text"><b>Price:</b> {{this.price}}</p>
                    <p class="card-text"><b>Stock:</b> {{this.stock}}</p>
                    <p class="card-text"><b>Category</b> {{this.category}}</p>
                    <p class="card-text"><b>Status</b> {{this.status}}</p>
                    <p class="card-text"><b>Code:</b> {{this.code}}</p>
                </div>
            </div>
        </div>
         {{/each}}
    </div>
</div>